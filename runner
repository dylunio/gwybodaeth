#!/usr/bin/env perl

use warnings;
use strict;
use lib '/home/imp25/urop/perl/gwybodaeth';
use lib '/home/imp25/urop/perl/gwybodaeth/Parsers';

my $data = shift;
my $map = shift;

use Read;
use N3;

my $file = Read->new();

my $len;
if (-f $data) {
    $len = $file->get_file_data($data);
} else {
    $len = $file->get_url_data($data);
}

die "Empty file." if ($len < 1);

my $url = Read->new();

if (-f $map) {
    $len = $file->get_file_map($map);
} else {
    $len = $file->get_url_map($map);
}

die "Empty site." if ($len < 1);

my @data = $file->get_input_map;

my $parser = N3->new();

my $map_triples = $parser->parse(@data);

use CSV;

my $csv = CSV->new();

my $csv_data_ref = $csv->parse($file->get_input_data);

use Write;

my $write = Write->new();

$write->write_rdf($map_triples, $csv_data_ref);
